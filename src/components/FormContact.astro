<form 
    action="/api/send-email" 
    method="post" 
    class="bg-gray-800 p-6 rounded-lg shadow-md w-full mx-auto"
>

    <label for="name" class="block text-gray-300 mb-2">Nombre</label>
    <input 
        type="text" 
        name="name" 
        id="name" 
        class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-4"
        required 
    />

    <label for="email" class="block text-gray-300 mb-2">Correo</label>
    <input 
        type="email" 
        name="email" 
        id="email" 
        class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-4"
        required 
    />

    <label for="message" class="block text-gray-300 mb-2">Mensaje</label>
    <textarea 
        name="message" 
        id="message" 
        rows="4" 
        class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-4"
        required
    ></textarea>

    <button 
        type="submit" 
        class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-500"
    >
        Enviar
    </button>
</form>
